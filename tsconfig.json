{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "diazo": [
        "dist/diazo/diazo",
        "dist/diazo"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "typedocOptions": {
      "mode": "file",
      "out": "docs",
      "target": "ES5",
      "excludeExternals": true,
      "excludePrivate": true,
      "externalPattern": "**/node_modules/**",
      "exclude": "**/node_modules/**"
  }
}